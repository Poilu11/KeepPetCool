{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<table class="table my-3" style="width: 70%; margin: auto;">
    <tbody>
    <tr>
        <th scope="row" colspan="2" style="text-align: center;"><img src="{{ asset(avatar_upload_path ~ (user.avatar ?: 'default-avatar.png')) }}" style="width: 100px; height:150px;"></th>
    </tr>
      <tr>
        <th scope="row">Identifiant</th>
        <td>{{ user.username }}</td>
      </tr>
      <tr>
        <th scope="row">Email</th>
        <td>{{ user.email }}</td>
      </tr>
      <tr>
        <th scope="row">Prénom</th>
        <td>{{ user.firstname }}</td>
      </tr>
      <tr>
        <th scope="row">Nom</th>
        <td>{{ user.lastname }}</td>
      </tr>
    </tbody>
  </table>

 <table class="table my-3" style="width: 70%; margin: auto;">
    <thead class="thead-dark">
        <tr>
        <th scope="col" colspan="3">Liste des commentaires à valider</th>
        </tr>
    </thead>
    <tbody>
        {% for comment in comments %}
        <tr>
            <td>Commentaire laissé par {{ comment.owner.username }} ({{ comment.owner.firstname }} {{ comment.owner.lastname }})</td>
            <td>le {{ comment.createdAt|date("d/m/Y") }}</td>
            <td>
            <i class="fas fa-thumbs-up"></i> Accepter<br>
            <i class="fas fa-thumbs-down"></i> Refuser
            </td>
        </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun commentaire à valider</td>
            </tr>
        {% endfor %}

    </tbody>
</table>
{% endblock %}
