{% extends 'base.html.twig' %}

{% block title %}Species index{% endblock %}

{% block body %}
    <h1>Species index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for species in species %}
            <tr>
                <td>{{ species.id }}</td>
                <td>{{ species.name }}</td>
                <td>
                    <a href="{{ path('species_show', {'id': species.id}) }}">show</a>
                    <a href="{{ path('species_edit', {'id': species.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('species_new') }}">Create new</a>
{% endblock %}
