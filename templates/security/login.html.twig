{% extends 'base.html.twig' %}

{% block title %}Connexion KeepPetCool{% endblock %}

{% block body %}

{% if error %}
<p style="color: red; width: 50%; margin: auto; font-weight: bold; text-align: center;">Identifiant et/ou mot de passe incorrect.</p>
    {# <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div> #}
{% endif %}

    <div class="card col-lg-4 col-sm-12 mt-5 mb-5 mr-auto ml-auto pr-0 pl-0">
        <div class="card-header bg-dark">
        <h2 class="text-white m-auto">Connexion</h2>
        </div>
        <div class="card-body">
        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
            <label for="username">Identifiant :</label>
            <small id="emailHelp" class="form-text text-muted">Identifiant créé lors de votre inscription.</small>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
            </div>
            <div class="form-group">
            <label for="password">Passe de mot :</label>
            <input class="form-control" type="password" id="password" name="_password" />
            </div>
            <input type="hidden" name="_target_path" value="/dashboard" />
            <button class="m-auto btn btn-dark" type="submit">Connexion</button>            
            <a class="m-auto btn btn-outline-light text-dark" href="{{ path('signup') }}">S'inscrire</a>
        
        </form>
        </div>
    </div>

{% endblock %}