{% extends 'base.html.twig' %}

{% block body %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

    <div class="card col-4 m-auto pr-0 pl-0">
        <div class="card-header" style="background-color:#343a40">
        <h2 class="text-white m-auto">Connexion</h2>
        </div>
        <div class="card-body">
        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
            <label for="username">Username:</label>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
            </div>
            <div class="form-group">
            <label for="password">Password:</label>

            <input class="form-control" type="password" id="password" name="_password" />
            </div>
            <button class="m-auto btn btn-dark" type="submit">login</button>
            <button class="m-auto btn btn-dark text-white"><a class="text-white" href="{{ path('user_new') }}">S'inscrire</a></button>
            
        </form>
        </div>
    </div>

{% endblock %}
