{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block body %}
<div style="width: 90%; margin: auto;">
    <h2>Ma messagerie</h2>

    <h4>Tous mes messages</h4>
    <ul class="list-group mt-2 mb-5">
    {% for message in messages %}

        <li class="list-group-item list-group-item-{{ cycle(['secondary', 'light'], loop.index0) }}">Envoyé le {{ message.createdAt|date("d/m/Y \\à H:i:s") }} - De {{ message.userTo.username }} à  {{ message.userFrom.username }} - Objet : {{ message.object }} <a href="{{ path('conversation', {'user1Id': message.userFrom.id, 'user2Id': message.userTo.id}) }}"><i class="fas fa-arrow-circle-right"></i></a></li>

    {% endfor %}
    </ul>
</div>

{% endblock %}
