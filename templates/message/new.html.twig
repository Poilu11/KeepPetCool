{% extends 'base.html.twig' %}

{% block title %}Création d'un nouveau message{% endblock %}

{% block body %}
<div class="container">
<h2 class="text-center">Envoi d'un message</h2>


<div class="card mt-4 mb-4 mr-auto ml-auto col-6">
<div class="card-body">
<form action="{{ path('message_new') }}" method="POST" >
    <div class="form-group">
    <label for="userFrom">De : {{ userFrom.username }}</label>
    <input type="hidden" value="{{ userFrom.id }}" name="userFrom" id="userFrom">
    </div>
    <div class="form-group">
    <label for="userTo">A : {{ userTo.username }}</label>
    <input type="hidden" value="{{ userTo.id }}" name="userTo" id="userTo">
  </div>
        <div class="form-group">
          <label for="messageObject">Objet de votre message</label>
          <input type="text" class="form-control" id="messageObject" name="messageObject" placeholder="Objet de votre message">
        </div>
        <div class="form-group">
          <label for="messageBody">Votre message</label>
<textarea class="form-control" id="messageBody" name="messageBody" rows="7">
{% if app.user.type == 'owner' %}
Quel animal je souhaite faire garder :
Pour quelle période et/ou durée :
{% endif %}
Bonjour,

</textarea>
        </div>
        <button class="btn btn-primary" type="submit">Envoyer</button>
</form>
</div>
</div>
    
</div>
{% endblock %}
