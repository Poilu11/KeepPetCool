{% extends 'base.html.twig' %}

{% block title %}Fiches animal bloquées{% endblock %}

{% block body %}
<div class="container">
    <h2 class="text-center">Liste des fiches animal bloquées</h2>

    <a class="btn btn-dark text-white" href="{{ path('dashboard') }}" role="button">Retour tableau de bord</a>
    <ul class="list-group mt-3 mb-5">
    {% for animal in animals %}

        <li class="d-flex justify-content-between list-group-item list-group-item-{{ cycle(['secondary', 'light'], loop.index0) }}">
          <a href="{{ path('animal_show', {'slug': animal.slug, 'id': animal.id}) }}">Fiche animal de {{ animal.user.username }} - {{ animal.title }}</a> <a href="{{ path('animal_disable', {'id': animal.id}) }}"><i class="fas fa-lock-open"></i></a>
        </li>

        {% else %}

        <li class="list-group-item list-group-item-secondary">Aucune fiche animal bloquée.</li>

    {% endfor %}
    </ul>
</div>

{% endblock %}